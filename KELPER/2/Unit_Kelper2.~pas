{$R *.dfm}

procedure TForm2.Helper1Click(Sender: TObject);
begin
  if ActiveMDIChild <> nil then
  begin
    if ActiveMDIChild.Name = 'HerperList' then
      Exit
    else
      ActiveMDIChild.Close;
  end

end.
